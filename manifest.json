{
  "manifest_version": 3,
  "name": "Xiaohongshu Comment Extractor",
  "version": "1.0",
  "description": "Extract comments from xiaohongshu.com and display them in a table",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*.xiaohongshu.com/*"],
      "js": ["content.js"]
    }
  ]
}
